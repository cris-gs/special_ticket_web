@model IEnumerable<Proyecto1SpecialTicket.Models.Entities.AdministrarRoles>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<h1 class="mt-5">Lista de Usuarios</h1>

<div class="table-responsive">
    <table class="table table-striped" id="myTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoleId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RolName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RolName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary pe-2"><i class="fa-solid fa-pen pe-1"></i></a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
@section Scripts {

    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json"
                }
            });
        });
    </script>
}
