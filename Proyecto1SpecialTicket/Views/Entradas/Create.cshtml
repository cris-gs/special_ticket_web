@model Proyecto1SpecialTicket.Models.Entrada

@{
    ViewData["Title"] = "Crear";
}


<h1 class="text-center mt-3">Crear un nueva entrada</h1>

<div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-list"></div>
            <div class="form-group mb-3">
                <label asp-for="Disponibles" class="control-label"></label>
                <input asp-for="Disponibles" class="form-control" readonly value="@Model.Disponibles" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="TipoAsiento" class="control-label"></label>
                <input asp-for="TipoAsiento" class="form-control" readonly value="@Model.TipoAsiento" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group mb-3" style="display: none;">
                <label asp-for="CreatedBy" class="control-label"></label>
                <input asp-for="CreatedBy" class="form-control" value="." />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group mb-3" style="display: none;">
                <label asp-for="UpdatedBy" class="control-label"></label>
                <input asp-for="UpdatedBy" class="form-control" value="." />
                <span asp-validation-for="UpdatedBy" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-3" style="display: none;">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IdEvento" class="control-label"></label>
                <input asp-for="IdEvento" class="form-control" readonly value="@Model.IdEvento" />
            </div>
            <div class="form-group d-flex align-items-center justify-content-between">
                <a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-right-from-bracket"></i></a>
                <button type="submit" class="btn btn-success"><i class="fa-solid fa-plus pe-1"></i>Crear nuevo</button>
            </div>
        </form>
    </div>
</div>

<style>
    .validation-list ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .validation-list li {
        margin-bottom: 10px;
        text-align: center;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
